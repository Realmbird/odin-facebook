<div class = "comment">
  <h4>Comment</h4>
  <div>
    <p>Content: </p>
      <p> <%= comment.body %></p>
  </div>
    <%# post.class.name %>
  <div class = "like">
    <%= link_to "Comment Like", likes_path(global_id: comment.to_global_id), data: {turbo_method: :post}%>
    <%= Like.where(likable_id: comment, likable_type: comment.class.name).count %>
  </div>
   <div class = "chat-room">
    <%= link_to "Chat Bubble", comment_path(comment.id)%>
    <%= Comment.where(commentable_id: comment, commentable_type: comment.class.name).count %>
  </div>
</div>

