<div id = "pending">
    <h1>Pending Friend Requests</h1>
    <h3>Recieved</h3>
    <ul>
        <% @user.inverse_friends.each do |recieved_user| %>
            <li>
               <%# friend to add they are sending request to you%>
               <%= recieved_user.email %>
               (<%= link_to "add friend", friendships_path(friend_id: recieved_user.id), data: { turbo_method: "post" }%>)
            </li>
        <% end %>
    </ul>
    <h3>Sent</h3>
    <ul>
        <% @user.friendships.each do |sent_user|%>
            <li>
                <%# friend request you already sent%>
                <%= sent_user.friend.email %>
                (<%= link_to "remove request", sent_user, data: {turbo_method: "delete"}%>)
            </li>
        <% end %>
    </ul>
</div>

